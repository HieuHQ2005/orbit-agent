# LM providers (one of these is enough; Ollama is auto-detected if none)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ORBIT_LM=             # e.g., openai/gpt-4o-mini, anthropic/claude-3-5-sonnet-20240620, ollama_chat/llama3.2

# Twilio (optional for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=+1XXXXXXXXXX
PERSONAL_NUMBER=+1YYYYYYYYYY

# Security toggles for SMS (recommended defaults)
ORBIT_ALLOW_INSECURE_TWILIO=false
ORBIT_RESTRICT_FROM=true
